<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Arcana.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24" MaxWidth="800" HorizontalAlignment="Left">
            <TextBlock Text="設定" Style="{StaticResource TitleTextBlockStyle}"/>

            <!-- Appearance -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="外觀" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <ComboBox Header="主題" Width="200">
                        <ComboBoxItem Content="跟隨系統" IsSelected="True"/>
                        <ComboBoxItem Content="淺色"/>
                        <ComboBoxItem Content="深色"/>
                    </ComboBox>

                    <ComboBox Header="語言" Width="200">
                        <ComboBoxItem Content="繁體中文" IsSelected="True"/>
                        <ComboBoxItem Content="English"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Sync Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="同步設定" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <ToggleSwitch Header="啟用自動同步" IsOn="True"/>

                    <ComboBox Header="同步頻率" Width="200">
                        <ComboBoxItem Content="每5分鐘" IsSelected="True"/>
                        <ComboBoxItem Content="每15分鐘"/>
                        <ComboBoxItem Content="每30分鐘"/>
                        <ComboBoxItem Content="每小時"/>
                    </ComboBox>

                    <Button Content="立即同步"/>
                </StackPanel>
            </Border>

            <!-- Data Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="資料設定" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Button Content="匯出資料"/>
                    <Button Content="匯入資料"/>
                    <Button Content="清除快取"/>
                </StackPanel>
            </Border>

            <!-- About -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="關於" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Arcana 企業管理系統"/>
                    <TextBlock Text="版本: 1.0.0" Opacity="0.7"/>
                    <TextBlock Text="© 2024 Arcana Team" Opacity="0.7"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
