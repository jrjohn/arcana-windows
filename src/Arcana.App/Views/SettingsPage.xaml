<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Arcana.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24" MaxWidth="800" HorizontalAlignment="Left">
            <TextBlock x:Name="PageTitle" Text="設定" Style="{StaticResource TitleTextBlockStyle}"/>

            <!-- Appearance -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock x:Name="AppearanceTitle" Text="外觀" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <ComboBox x:Name="ThemeComboBox" Header="主題" Width="200" SelectionChanged="ThemeComboBox_SelectionChanged">
                        <ComboBoxItem x:Name="ThemeSystem" Content="跟隨系統" Tag="System"/>
                        <ComboBoxItem x:Name="ThemeLight" Content="淺色" Tag="Light"/>
                        <ComboBoxItem x:Name="ThemeDark" Content="深色" Tag="Dark"/>
                    </ComboBox>

                    <ComboBox x:Name="LanguageComboBox" Header="語言" Width="200" SelectionChanged="LanguageComboBox_SelectionChanged">
                        <ComboBoxItem Content="繁體中文" Tag="zh-TW"/>
                        <ComboBoxItem Content="English" Tag="en-US"/>
                        <ComboBoxItem Content="日本語" Tag="ja-JP"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Sync Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock x:Name="SyncTitle" Text="同步設定" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <ToggleSwitch x:Name="AutoSyncToggle" Header="啟用自動同步" IsOn="True"/>

                    <ComboBox x:Name="SyncFrequencyComboBox" Header="同步頻率" Width="200">
                        <ComboBoxItem Content="每5分鐘" IsSelected="True"/>
                        <ComboBoxItem Content="每15分鐘"/>
                        <ComboBoxItem Content="每30分鐘"/>
                        <ComboBoxItem Content="每小時"/>
                    </ComboBox>

                    <Button x:Name="SyncNowButton" Content="立即同步" Click="SyncNow_Click"/>
                </StackPanel>
            </Border>

            <!-- Data Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock x:Name="DataTitle" Text="資料設定" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Button x:Name="ExportButton" Content="匯出資料" Click="Export_Click"/>
                    <Button x:Name="ImportButton" Content="匯入資料" Click="Import_Click"/>
                    <Button x:Name="ClearCacheButton" Content="清除快取" Click="ClearCache_Click"/>
                </StackPanel>
            </Border>

            <!-- About -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock x:Name="AboutTitle" Text="關於" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock x:Name="AppName" Text="Arcana 企業管理系統"/>
                    <TextBlock x:Name="AppVersion" Text="版本: 1.0.0" Opacity="0.7"/>
                    <TextBlock Text="© 2024 Arcana Team" Opacity="0.7"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
