<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Arcana.App.Views.OrderListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arcana.App.Views"
    xmlns:vm="using:Arcana.App.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock x:Name="PageTitle" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock x:Name="OrderCountText" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
            </StackPanel>

            <CommandBar Grid.Column="1" DefaultLabelPosition="Right" Background="Transparent">
                <AppBarButton x:Name="AddOrderButton" Icon="Add" Click="NewOrder_Click"/>
                <AppBarButton x:Name="RefreshButton" Icon="Refresh" Click="Refresh_Click"/>
                <AppBarSeparator/>
                <AppBarButton x:Name="ExportButton" Icon="Download"/>
                <AppBarButton x:Name="PrintButton" Icon="Print"/>
            </CommandBar>
        </Grid>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,16,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <AutoSuggestBox x:Name="SearchBox"
                               QueryIcon="Find"
                               Width="300"
                               HorizontalAlignment="Left"
                               QuerySubmitted="SearchBox_QuerySubmitted"/>

                <ComboBox Grid.Column="1" x:Name="StatusFilter" Width="120" Margin="16,0,0,0">
                    <ComboBoxItem x:Name="StatusAll"/>
                    <ComboBoxItem x:Name="StatusDraft"/>
                    <ComboBoxItem x:Name="StatusPending"/>
                    <ComboBoxItem x:Name="StatusConfirmed"/>
                    <ComboBoxItem x:Name="StatusProcessing"/>
                    <ComboBoxItem x:Name="StatusShipped"/>
                    <ComboBoxItem x:Name="StatusCompleted"/>
                    <ComboBoxItem x:Name="StatusCancelled"/>
                </ComboBox>

                <CalendarDatePicker Grid.Column="2" x:Name="FromDatePicker" Margin="16,0,0,0"/>
                <CalendarDatePicker Grid.Column="3" x:Name="ToDatePicker" Margin="8,0,0,0"/>

                <Button Grid.Column="4" x:Name="ClearFilterButton" Margin="16,0,0,0" Click="ClearFilter_Click"/>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Row -->
                <Grid Padding="8" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="ColOrderNumber" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ColDate" Grid.Column="1" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ColCustomer" Grid.Column="2" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ColAmount" Grid.Column="3" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="ColPaymentStatus" Grid.Column="4" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ColOrderStatus" Grid.Column="5" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ColActions" Grid.Column="6" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </Grid>

                <ListView x:Name="OrdersListView"
                         Grid.Row="1"
                         SelectionMode="Single"
                         IsItemClickEnabled="True"
                         ItemClick="OrdersListView_ItemClick"
                         ItemContainerStyle="{StaticResource HoverableListViewItemStyle}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding OrderNumber}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding OrderDate, Converter={StaticResource DateFormatConverter}}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding CustomerName}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="{Binding TotalAmount, Converter={StaticResource NumberFormatConverter}}" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                            <Border Grid.Column="4" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Background="{ThemeResource SystemAccentColorLight2}">
                                <TextBlock Text="{Binding PaymentStatus, Converter={StaticResource StatusLocalizationConverter}, ConverterParameter=payment.status}" FontSize="12"/>
                            </Border>

                            <Border Grid.Column="5" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Background="{ThemeResource SystemAccentColor}">
                                <TextBlock Text="{Binding Status, Converter={StaticResource StatusLocalizationConverter}, ConverterParameter=order.status}" FontSize="12" Foreground="White"/>
                            </Border>

                            <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4">
                                <Button Style="{StaticResource ActionButtonStyle}"
                                        Click="EditOrder_Click"
                                        AutomationProperties.Name="Edit">
                                    <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                </Button>
                                <Button Style="{StaticResource ActionButtonStyle}"
                                        Click="DeleteOrder_Click"
                                        AutomationProperties.Name="Delete">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            </Grid>
        </Border>

        <!-- Pagination -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="PaginationInfo" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:Name="PrevButton" Click="PrevPage_Click" IsEnabled="False"/>
                <TextBlock x:Name="PageInfo" VerticalAlignment="Center" Margin="8,0"/>
                <Button x:Name="NextButton" Click="NextPage_Click" IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="4" Visibility="Collapsed" Background="#80000000">
            <ProgressRing IsActive="True" Width="60" Height="60"/>
        </Grid>
    </Grid>
</Page>
