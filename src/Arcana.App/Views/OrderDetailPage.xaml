<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Arcana.App.Views.OrderDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arcana.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton" Click="Back_Click" VerticalAlignment="Center" Margin="0,0,16,0">
                <FontIcon Glyph="&#xE72B;" FontSize="16"/>
            </Button>

            <StackPanel Grid.Column="1">
                <TextBlock x:Name="PageTitle" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock x:Name="OrderStatusText" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
            </StackPanel>

            <CommandBar Grid.Column="2" DefaultLabelPosition="Right" Background="Transparent">
                <AppBarButton x:Name="EditButton" Icon="Edit" Click="Edit_Click" Visibility="Collapsed"/>
                <AppBarButton x:Name="SaveButton" Icon="Save" Click="Save_Click"/>
                <AppBarButton x:Name="CancelButton" Icon="Cancel" Click="Cancel_Click"/>
                <AppBarSeparator/>
                <AppBarButton x:Name="PrintButton" Icon="Print"/>
            </CommandBar>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="16">
                    <!-- Order Info -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock x:Name="OrderInfoTitle" Style="{StaticResource SubtitleTextBlockStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="0,0,8,12">
                                    <TextBlock x:Name="OrderNumberLabel" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBox x:Name="OrderNumberText" IsReadOnly="True"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,12">
                                    <TextBlock x:Name="OrderDateLabel" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <CalendarDatePicker x:Name="OrderDatePicker" HorizontalAlignment="Stretch"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Margin="0,0,8,0">
                                    <TextBlock x:Name="CustomerLabel" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <ComboBox x:Name="CustomerComboBox"
                                             HorizontalAlignment="Stretch"
                                             DisplayMemberPath="Name"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock x:Name="PaymentMethodLabel" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <ComboBox x:Name="PaymentMethodComboBox" HorizontalAlignment="Stretch">
                                        <ComboBoxItem x:Name="PaymentCash"/>
                                        <ComboBoxItem x:Name="PaymentCreditCard"/>
                                        <ComboBoxItem x:Name="PaymentBankTransfer"/>
                                        <ComboBoxItem x:Name="PaymentCheck"/>
                                        <ComboBoxItem x:Name="PaymentCredit"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Order Items -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="OrderItemsTitle" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                    <AutoSuggestBox x:Name="ProductSearchBox"
                                                   Width="200"
                                                   QueryIcon="Find"
                                                   QuerySubmitted="ProductSearch_QuerySubmitted"/>
                                    <Button x:Name="ClearItemsButton" Click="ClearItems_Click"/>
                                </StackPanel>
                            </Grid>

                            <!-- Order Items Header -->
                            <Grid Padding="8" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" CornerRadius="4,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="#" FontWeight="SemiBold"/>
                                <TextBlock x:Name="ColProductCode" Grid.Column="1" FontWeight="SemiBold"/>
                                <TextBlock x:Name="ColProductName" Grid.Column="2" FontWeight="SemiBold"/>
                                <TextBlock x:Name="ColQuantity" Grid.Column="3" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ColUnitPrice" Grid.Column="4" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="ColDiscount" Grid.Column="5" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ColSubtotal" Grid.Column="6" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="7" Text="" FontWeight="SemiBold"/>
                            </Grid>

                            <ListView x:Name="OrderItemsListView" MinHeight="200" MaxHeight="400" Margin="0,-4,0,0">

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding LineNumber}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ProductCode}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding ProductName}" VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="-" Width="32" Click="DecreaseQty_Click"/>
                                                <TextBlock Text="{Binding Quantity}" VerticalAlignment="Center" Margin="8,0"/>
                                                <Button Content="+" Width="32" Click="IncreaseQty_Click"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="4" Text="{Binding UnitPrice, Converter={StaticResource NumberFormatConverter}}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            <NumberBox Grid.Column="5" Value="{Binding DiscountPercent, Mode=TwoWay}" Minimum="0" Maximum="100" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="6" Text="{Binding LineTotal, Converter={StaticResource NumberFormatConverter}}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold"/>

                                            <Button Grid.Column="7" Click="RemoveItem_Click" HorizontalAlignment="Center">
                                                <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Shipping Info -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock x:Name="ShippingInfoTitle" Style="{StaticResource SubtitleTextBlockStyle}"/>

                            <TextBox x:Name="ShippingAddressText"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="ShippingCityText" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" x:Name="ShippingPostalCodeText" Margin="8,0,0,0"/>
                            </Grid>

                            <CalendarDatePicker x:Name="ExpectedDeliveryDatePicker" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>

                    <!-- Notes -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock x:Name="NotesTitle" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBox x:Name="NotesText" AcceptsReturn="True" TextWrapping="Wrap" Height="100"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Order Summary -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="16,0,0,0" VerticalAlignment="Top">
                    <StackPanel Spacing="16">
                        <TextBlock x:Name="OrderSummaryTitle" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <Grid RowSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="SubtotalLabel" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="SubtotalText" Text="$0" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                            <TextBlock x:Name="TaxLabel" Grid.Row="1" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TaxAmountText" Text="$0" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                            <TextBlock x:Name="ShippingLabel" Grid.Row="2" VerticalAlignment="Center"/>
                            <NumberBox Grid.Row="2" Grid.Column="1"
                                       x:Name="ShippingCostBox"
                                       Value="0"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       HorizontalAlignment="Right"
                                       Width="120"/>

                            <TextBlock x:Name="DiscountLabel" Grid.Row="3" VerticalAlignment="Center"/>
                            <NumberBox Grid.Row="3" Grid.Column="1"
                                       x:Name="DiscountAmountBox"
                                       Value="0"
                                       Minimum="0"
                                       Maximum="100"
                                       SpinButtonPlacementMode="Compact"
                                       HorizontalAlignment="Right"
                                       Width="120"/>

                            <Border Grid.Row="5" Grid.ColumnSpan="2" Height="1" Background="{ThemeResource SystemControlForegroundBaseMediumBrush}" Margin="0,8"/>

                            <TextBlock x:Name="TotalLabel" Grid.Row="6" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" x:Name="TotalAmountText" Text="$0" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                        </Grid>

                        <Button x:Name="CalculateButton" Click="Calculate_Click" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="3" Visibility="Collapsed" Background="#80000000">
            <ProgressRing IsActive="True" Width="60" Height="60"/>
        </Grid>
    </Grid>
</Page>
