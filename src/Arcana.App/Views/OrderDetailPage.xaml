<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Arcana.App.Views.OrderDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arcana.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton" Click="Back_Click" VerticalAlignment="Center" Margin="0,0,16,0">
                <FontIcon Glyph="&#xE72B;" FontSize="16"/>
            </Button>

            <StackPanel Grid.Column="1">
                <TextBlock x:Name="PageTitle" Text="新增訂單" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock x:Name="OrderStatus" Text="草稿" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
            </StackPanel>

            <CommandBar Grid.Column="2" DefaultLabelPosition="Right" Background="Transparent">
                <AppBarButton x:Name="EditButton" Icon="Edit" Label="編輯" Click="Edit_Click" Visibility="Collapsed"/>
                <AppBarButton x:Name="SaveButton" Icon="Save" Label="儲存" Click="Save_Click"/>
                <AppBarButton Icon="Cancel" Label="取消" Click="Cancel_Click"/>
                <AppBarSeparator/>
                <AppBarButton Icon="Print" Label="列印"/>
            </CommandBar>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="16">
                    <!-- Order Info -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="訂單資訊" Style="{StaticResource SubtitleTextBlockStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="0,0,8,12">
                                    <TextBlock Text="訂單編號" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBox x:Name="OrderNumberText" IsReadOnly="True"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,12">
                                    <TextBlock Text="訂單日期" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <CalendarDatePicker x:Name="OrderDatePicker" HorizontalAlignment="Stretch"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Margin="0,0,8,0">
                                    <TextBlock Text="客戶" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <ComboBox x:Name="CustomerComboBox"
                                             HorizontalAlignment="Stretch"
                                             PlaceholderText="選擇客戶"
                                             DisplayMemberPath="Name"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="付款方式" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <ComboBox x:Name="PaymentMethodComboBox" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="現金"/>
                                        <ComboBoxItem Content="信用卡"/>
                                        <ComboBoxItem Content="銀行轉帳"/>
                                        <ComboBoxItem Content="支票"/>
                                        <ComboBoxItem Content="賒帳"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Order Items -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="訂單明細" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                    <AutoSuggestBox x:Name="ProductSearchBox"
                                                   PlaceholderText="搜尋產品..."
                                                   Width="200"
                                                   QueryIcon="Find"
                                                   QuerySubmitted="ProductSearch_QuerySubmitted"/>
                                    <Button Content="清空明細" Click="ClearItems_Click"/>
                                </StackPanel>
                            </Grid>

                            <ListView x:Name="OrderItemsListView" MinHeight="200" MaxHeight="400">
                                <ListView.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="#" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="產品代碼" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="產品名稱" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3" Text="數量" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="單價" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="5" Text="折扣%" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="6" Text="小計" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="7" Text="" FontWeight="SemiBold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.HeaderTemplate>

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding LineNumber}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ProductCode}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding ProductName}" VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="-" Width="32" Click="DecreaseQty_Click"/>
                                                <TextBlock Text="{Binding Quantity}" VerticalAlignment="Center" Margin="8,0"/>
                                                <Button Content="+" Width="32" Click="IncreaseQty_Click"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="4" Text="{Binding UnitPrice, Converter={StaticResource NumberFormatConverter}}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            <NumberBox Grid.Column="5" Value="{Binding DiscountPercent, Mode=TwoWay}" Minimum="0" Maximum="100" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="6" Text="{Binding LineTotal, Converter={StaticResource NumberFormatConverter}}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold"/>

                                            <Button Grid.Column="7" Click="RemoveItem_Click" HorizontalAlignment="Center">
                                                <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Shipping Info -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="送貨資訊" Style="{StaticResource SubtitleTextBlockStyle}"/>

                            <TextBox x:Name="ShippingAddressText" Header="送貨地址" PlaceholderText="輸入送貨地址"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="ShippingCityText" Header="城市" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" x:Name="ShippingPostalCodeText" Header="郵遞區號" Margin="8,0,0,0"/>
                            </Grid>

                            <CalendarDatePicker x:Name="ExpectedDeliveryDatePicker" Header="預計送達日期" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>

                    <!-- Notes -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="備註" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBox x:Name="NotesText" AcceptsReturn="True" TextWrapping="Wrap" Height="100"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Order Summary -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="16,0,0,0" VerticalAlignment="Top">
                    <StackPanel Spacing="16">
                        <TextBlock Text="訂單摘要" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="小計"/>
                            <TextBlock Grid.Column="1" x:Name="SubtotalText" Text="$0" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Text="稅額 (5%)"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TaxAmountText" Text="$0" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2" Text="運費"/>
                            <NumberBox Grid.Row="2" Grid.Column="1" x:Name="ShippingCostBox" Value="0" Minimum="0" HorizontalAlignment="Right" Width="100"/>

                            <TextBlock Grid.Row="3" Text="折扣"/>
                            <NumberBox Grid.Row="3" Grid.Column="1" x:Name="DiscountAmountBox" Value="0" Minimum="0" HorizontalAlignment="Right" Width="100"/>

                            <Border Grid.Row="5" Grid.ColumnSpan="2" Height="1" Background="{ThemeResource SystemControlForegroundBaseMediumBrush}" Margin="0,8"/>

                            <TextBlock Grid.Row="6" Text="總計" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" x:Name="TotalAmountText" Text="$0" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                        </Grid>

                        <Button Content="計算總計" Click="Calculate_Click" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="3" Visibility="Collapsed" Background="#80000000">
            <ProgressRing IsActive="True" Width="60" Height="60"/>
        </Grid>
    </Grid>
</Page>
