<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Arcana.App.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arcana.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- Header -->
            <StackPanel>
                <TextBlock Text="歡迎使用 Arcana" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="企業管理系統" Style="{StaticResource SubtitleTextBlockStyle}" Opacity="0.7"/>
            </StackPanel>

            <!-- Quick Actions -->
            <StackPanel>
                <TextBlock Text="快速操作" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>
                <GridView SelectionMode="None">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid MaximumRowsOrColumns="4" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <Button x:ConnectionId='11' Width="160" Height="120" Margin="4"                       >
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontSize="32"/>
                            <TextBlock Text="新增訂單"/>
                        </StackPanel>
                    </Button>

                    <Button x:ConnectionId='12' Width="160" Height="120" Margin="4"                          >
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE77B;" FontSize="32"/>
                            <TextBlock Text="新增客戶"/>
                        </StackPanel>
                    </Button>

                    <Button x:ConnectionId='13' Width="160" Height="120" Margin="4"                         >
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE7BF;" FontSize="32"/>
                            <TextBlock Text="新增產品"/>
                        </StackPanel>
                    </Button>

                    <Button x:ConnectionId='14' Width="160" Height="120" Margin="4"                          >
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE9F9;" FontSize="32"/>
                            <TextBlock Text="查看報表"/>
                        </StackPanel>
                    </Button>
                </GridView>
            </StackPanel>

            <!-- Dashboard Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today's Orders -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="今日訂單" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                        <TextBlock x:ConnectionId='10' x:Name="TodayOrdersCount" Text="0" Style="{StaticResource HeaderTextBlockStyle}"/>
                        <TextBlock Text="筆" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Today's Revenue -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="今日營收" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                        <TextBlock x:ConnectionId='9' x:Name="TodayRevenue" Text="$0" Style="{StaticResource HeaderTextBlockStyle}"/>
                        <TextBlock Text="元" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Pending Orders -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="待處理訂單" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                        <TextBlock x:ConnectionId='8' x:Name="PendingOrdersCount" Text="0" Style="{StaticResource HeaderTextBlockStyle}"/>
                        <TextBlock Text="筆" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Total Customers -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="總客戶數" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                        <TextBlock x:ConnectionId='7' x:Name="TotalCustomers" Text="0" Style="{StaticResource HeaderTextBlockStyle}"/>
                        <TextBlock Text="位" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Orders -->
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="最近訂單" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <HyperlinkButton x:ConnectionId='6' Grid.Column="1" Content="查看全部"                            />
                </Grid>

                <Border Style="{StaticResource CardStyle}" Margin="0,12,0,0">
                    <ListView x:ConnectionId='4' x:Name="RecentOrdersList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding OrderNumber}" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CustomerName}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding TotalAmount, Converter={StaticResource NumberFormatConverter}}" HorizontalAlignment="Right"/>
                                    <Border Grid.Column="3" CornerRadius="4" Padding="8,4" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Status}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </StackPanel>

            <!-- System Info -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="系統資訊" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="版本:" Opacity="0.7"/>
                        <TextBlock Grid.Column="1" Text="1.0.0"/>

                        <TextBlock Grid.Row="1" Text="資料庫:" Opacity="0.7"/>
                        <TextBlock x:ConnectionId='2' Grid.Row="1" Grid.Column="1" x:Name="DatabaseStatus" Text="已連線"/>

                        <TextBlock Grid.Row="2" Text="最後同步:" Opacity="0.7"/>
                        <TextBlock x:ConnectionId='3' Grid.Row="2" Grid.Column="1" x:Name="LastSyncTime" Text="從未"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>

