<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Arcana.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24" MaxWidth="800" HorizontalAlignment="Left">
            <TextBlock x:ConnectionId='2' x:Name="PageTitle" Text="設定" Style="{StaticResource TitleTextBlockStyle}"/>

            <!-- Appearance -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock x:ConnectionId='14' x:Name="AppearanceTitle" Text="外觀" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <!-- Theme Selection -->
                    <TextBlock x:ConnectionId='15' x:Name="ThemeLabel" Text="主題" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <GridView x:ConnectionId='16' x:Name="ThemeGridView"
                              SelectionMode="Single"
                                                                               
                                                               >
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border Width="120" Height="80" CornerRadius="8"
                                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="2"
                                        Margin="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <!-- Theme Preview -->
                                        <Grid Grid.Row="0" CornerRadius="6,6,0,0">
                                            <Grid.Background>
                                                <SolidColorBrush Color="{Binding BackgroundColor}"/>
                                            </Grid.Background>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Sidebar Preview -->
                                            <Border Grid.Column="0" CornerRadius="6,0,0,0">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding PaneColor}"/>
                                                </Border.Background>
                                            </Border>
                                            <!-- Content Area -->
                                            <StackPanel Grid.Column="1" Padding="4" Spacing="2">
                                                <Border Height="4" Width="40" CornerRadius="2" HorizontalAlignment="Left">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding AccentColor}"/>
                                                    </Border.Background>
                                                </Border>
                                                <Border Height="3" Width="30" CornerRadius="1" HorizontalAlignment="Left" Opacity="0.5">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding TextColor}"/>
                                                    </Border.Background>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                        <!-- Theme Name -->
                                        <Border Grid.Row="1"
                                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                CornerRadius="0,0,6,6"
                                                Padding="4,2">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontSize="11"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>

                    <ComboBox x:ConnectionId='17' x:Name="LanguageComboBox" Header="語言" Width="200"                                                     >
                        <ComboBoxItem Content="繁體中文" Tag="zh-TW"/>
                        <ComboBoxItem Content="English" Tag="en-US"/>
                        <ComboBoxItem Content="日本語" Tag="ja-JP"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Sync Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock x:ConnectionId='10' x:Name="SyncTitle" Text="同步設定" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <ToggleSwitch x:ConnectionId='11' x:Name="AutoSyncToggle" Header="啟用自動同步" IsOn="True"/>

                    <ComboBox x:ConnectionId='12' x:Name="SyncFrequencyComboBox" Header="同步頻率" Width="200">
                        <ComboBoxItem Content="每5分鐘" IsSelected="True"/>
                        <ComboBoxItem Content="每15分鐘"/>
                        <ComboBoxItem Content="每30分鐘"/>
                        <ComboBoxItem Content="每小時"/>
                    </ComboBox>

                    <Button x:ConnectionId='13' x:Name="SyncNowButton" Content="立即同步"                      />
                </StackPanel>
            </Border>

            <!-- Data Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock x:ConnectionId='6' x:Name="DataTitle" Text="資料設定" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Button x:ConnectionId='7' x:Name="ExportButton" Content="匯出資料"                     />
                    <Button x:ConnectionId='8' x:Name="ImportButton" Content="匯入資料"                     />
                    <Button x:ConnectionId='9' x:Name="ClearCacheButton" Content="清除快取"                         />
                </StackPanel>
            </Border>

            <!-- About -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock x:ConnectionId='3' x:Name="AboutTitle" Text="關於" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock x:ConnectionId='4' x:Name="AppName" Text="Arcana 企業管理系統"/>
                    <TextBlock x:ConnectionId='5' x:Name="AppVersion" Text="版本: 1.0.0" Opacity="0.7"/>
                    <TextBlock Text="© 2024 Arcana Team" Opacity="0.7"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>

