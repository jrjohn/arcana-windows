<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Arcana.App.Views.PluginManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arcana.App.Views"
    xmlns:vm="using:Arcana.App.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Plugin List -->
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Plugin Manager" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="Manage installed plugins, versions, and health status"
                               Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
                </StackPanel>

                <CommandBar Grid.Column="1" DefaultLabelPosition="Right" Background="Transparent">
                    <AppBarButton x:ConnectionId='47' Icon="Add" Label="Install"                                                  />
                    <AppBarButton x:ConnectionId='48' Icon="Refresh" Label="Refresh"                                                />
                    <AppBarButton x:ConnectionId='49' Label="Check Health"                                                   >
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE95E;"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>
            </Grid>

            <!-- Search Bar -->
            <AutoSuggestBox x:ConnectionId='29' Grid.Row="1"
                           PlaceholderText="Search plugins..."
                           QueryIcon="Find"
                                                                            
                           Margin="0,16,0,16"/>

            <!-- Plugin List -->
            <ListView x:ConnectionId='30' Grid.Row="2"
                     x:Name="PluginsListView"
                                                             
                                                                                  
                     SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate                                    >
                        <Grid x:ConnectionId='36' Padding="12" Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Plugin Icon -->
                            <Border Width="40" Height="40" CornerRadius="8"
                                   Background="{ThemeResource SystemAccentColorLight2}">
                                <FontIcon Glyph="&#xEA86;" FontSize="20"/>
                            </Border>

                            <!-- Plugin Info -->
                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock x:ConnectionId='44'                      FontWeight="SemiBold"/>
                                    <TextBlock x:ConnectionId='45'                               Opacity="0.6"/>
                                    <Border x:ConnectionId='46' CornerRadius="4" Padding="6,2"
                                                                          
                                           Background="{ThemeResource SystemAccentColor}">
                                        <TextBlock Text="Built-in" FontSize="10" Foreground="White"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock x:ConnectionId='41'                            
                                          Style="{StaticResource CaptionTextBlockStyle}"
                                          Opacity="0.7"
                                          TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                                    <TextBlock x:ConnectionId='42'                            FontSize="11" Opacity="0.6"/>
                                    <TextBlock x:ConnectionId='43'                        FontSize="11" Opacity="0.6"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Status Indicators -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="4">
                                <!-- State Badge -->
                                <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Right">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="StateBrush" Color="Green"/>
                                    </Border.Background>
                                    <TextBlock x:ConnectionId='40'                             FontSize="11" Foreground="White"/>
                                </Border>

                                <!-- Health Badge -->
                                <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Right">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="HealthBrush" Color="Green"/>
                                    </Border.Background>
                                    <TextBlock x:ConnectionId='38'                                   FontSize="11" Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Status Bar -->
            <Grid Grid.Row="3" Padding="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:ConnectionId='31'                                                     
                          VerticalAlignment="Center" Opacity="0.7"/>

                <!-- Install Progress -->
                <StackPanel x:ConnectionId='32' Grid.Column="1" Orientation="Horizontal" Spacing="8"
                                                                                    >
                    <ProgressRing IsActive="True" Width="20" Height="20"/>
                    <TextBlock x:ConnectionId='33'                                                     VerticalAlignment="Center"/>
                    <ProgressBar x:ConnectionId='34'                                                        
                                Width="100" Maximum="1"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Right Panel: Plugin Details -->
        <Border Grid.Column="1" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
            <ScrollViewer>
                <StackPanel x:ConnectionId='4' Padding="24" Spacing="16"
                                                                                                                                            >

                    <!-- Plugin Header -->
                    <StackPanel Spacing="8">
                        <TextBlock x:ConnectionId='27'                                                           
                                  Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock x:ConnectionId='28'                                                                  
                                  TextWrapping="Wrap" Opacity="0.7"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button x:ConnectionId='24' Content="Activate"
                                                                                 
                                                                                                
                               Style="{StaticResource AccentButtonStyle}"/>
                        <Button x:ConnectionId='25' Content="Deactivate"
                                                                                   
                                                                                                />
                        <Button x:ConnectionId='26' Content="Reload"
                                                                               
                                                                                                />
                    </StackPanel>

                    <MenuFlyoutSeparator/>

                    <!-- Plugin Information -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Information" FontWeight="SemiBold"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="ID:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='18' Grid.Column="1"                                                         />

                            <TextBlock Grid.Row="1" Text="Version:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='19' Grid.Row="1" Grid.Column="1"                                                                    />

                            <TextBlock Grid.Row="2" Text="Author:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='20' Grid.Row="2" Grid.Column="1"                                                             />

                            <TextBlock Grid.Row="3" Text="Type:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='21' Grid.Row="3" Grid.Column="1"                                                                 />

                            <TextBlock Grid.Row="4" Text="State:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='22' Grid.Row="4" Grid.Column="1"                                                                  />

                            <TextBlock Grid.Row="5" Text="Installed:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='23' Grid.Row="5" Grid.Column="1"                                                                  />
                        </Grid>
                    </StackPanel>

                    <MenuFlyoutSeparator/>

                    <!-- Health Status -->
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Health Status" FontWeight="SemiBold"/>
                            <Button x:ConnectionId='17' Content="Check" Padding="8,2"
                                                                                  
                                                                                                    />
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Status:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='12' Grid.Column="1"                                                                        />

                            <TextBlock Grid.Row="1" Text="Message:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='13' Grid.Row="1" Grid.Column="1"                                                                     TextWrapping="Wrap"/>

                            <TextBlock Grid.Row="2" Text="Memory:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='14' Grid.Row="2" Grid.Column="1"                                                                           />

                            <TextBlock Grid.Row="3" Text="Error Count:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='15' Grid.Row="3" Grid.Column="1"                                                                 />

                            <TextBlock Grid.Row="4" Text="Last Error:" Opacity="0.7"/>
                            <TextBlock x:ConnectionId='16' Grid.Row="4" Grid.Column="1"                                                                
                                      TextWrapping="Wrap" Foreground="Red"/>
                        </Grid>

                        <!-- Health Check Details -->
                        <ListView x:ConnectionId='10'                                                                           
                                 MaxHeight="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding CheckName}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding State}" Margin="8,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Message}" Opacity="0.7"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <MenuFlyoutSeparator/>

                    <!-- Version Management -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Version Management" FontWeight="SemiBold"/>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button x:ConnectionId='8' Content="Upgrade"
                                                                                    
                                                                                                    
                                                                                                        />
                            <Button x:ConnectionId='9' Content="Uninstall"
                                                                                      
                                                                                                    
                                                                                                          />
                        </StackPanel>

                        <!-- Version History -->
                        <TextBlock Text="Available Versions for Rollback:" Margin="0,8,0,0" Opacity="0.7"/>
                        <ListView x:ConnectionId='5'                                                                
                                 MaxHeight="200"
                                 SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding Version}" FontWeight="SemiBold"/>
                                                <Border CornerRadius="4" Padding="6,2"
                                                       Visibility="{Binding IsCurrent}"
                                                       Background="{ThemeResource SystemAccentColor}">
                                                    <TextBlock Text="Current" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding InstalledAt}" FontSize="11" Opacity="0.6"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="{Binding SizeBytes, Converter={StaticResource BytesFormatConverter}}"
                                                  FontSize="11" Opacity="0.6" VerticalAlignment="Center" Margin="8,0"/>

                                        <Button x:ConnectionId='7' Grid.Column="2" Content="Rollback" Padding="8,4"
                                               Tag="{Binding}"
                                                                            
                                               IsEnabled="{Binding IsCurrent, Converter={StaticResource InverseBoolConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:ConnectionId='2' Grid.ColumnSpan="2"                                                       
              Background="#80000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressRing IsActive="True" Width="60" Height="60"/>
                <TextBlock Text="Loading..." Margin="0,16,0,0" Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Error Banner -->
        <InfoBar x:ConnectionId='3' Grid.ColumnSpan="2"
                                                                 
                Severity="Error"
                Title="Error"
                                                                      
                VerticalAlignment="Top"
                Margin="24,80,24,0"/>
    </Grid>
</Page>

