<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Arcana.App.Views.OrderDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arcana.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock x:ConnectionId='29' x:Name="PageTitle" Text="新增訂單" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock x:ConnectionId='30' x:Name="OrderStatus" Text="草稿" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.7"/>
            </StackPanel>

            <CommandBar Grid.Column="1" DefaultLabelPosition="Right" Background="Transparent">
                <AppBarButton x:ConnectionId='26' x:Name="EditButton" Icon="Edit" Label="編輯"                    Visibility="Collapsed"/>
                <AppBarButton x:ConnectionId='27' x:Name="SaveButton" Icon="Save" Label="儲存"                   />
                <AppBarButton x:ConnectionId='28' Icon="Cancel" Label="取消"                     />
                <AppBarSeparator/>
                <AppBarButton Icon="Print" Label="列印"/>
            </CommandBar>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="16">
                    <!-- Order Info -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="訂單資訊" Style="{StaticResource SubtitleTextBlockStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="0,0,8,12">
                                    <TextBlock Text="訂單編號" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBox x:ConnectionId='25' x:Name="OrderNumberText" IsReadOnly="True"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,12">
                                    <TextBlock Text="訂單日期" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <CalendarDatePicker x:ConnectionId='24' x:Name="OrderDatePicker" HorizontalAlignment="Stretch"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Margin="0,0,8,0">
                                    <TextBlock Text="客戶" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <ComboBox x:ConnectionId='23' x:Name="CustomerComboBox"
                                             HorizontalAlignment="Stretch"
                                             PlaceholderText="選擇客戶"
                                             DisplayMemberPath="Name"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="付款方式" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <ComboBox x:ConnectionId='22' x:Name="PaymentMethodComboBox" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="現金"/>
                                        <ComboBoxItem Content="信用卡"/>
                                        <ComboBoxItem Content="銀行轉帳"/>
                                        <ComboBoxItem Content="支票"/>
                                        <ComboBoxItem Content="賒帳"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Order Items -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="訂單明細" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                    <AutoSuggestBox x:ConnectionId='20' x:Name="ProductSearchBox"
                                                   PlaceholderText="搜尋產品..."
                                                   Width="200"
                                                   QueryIcon="Find"
                                                                                                />
                                    <Button x:ConnectionId='21' Content="清空明細"                         />
                                </StackPanel>
                            </Grid>

                            <ListView x:ConnectionId='14' x:Name="OrderItemsListView" MinHeight="200" MaxHeight="400">
                                <ListView.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="#" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="產品代碼" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="產品名稱" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3" Text="數量" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="單價" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="5" Text="折扣%" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="6" Text="小計" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="7" Text="" FontWeight="SemiBold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.HeaderTemplate>

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding LineNumber}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ProductCode}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding ProductName}" VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button x:ConnectionId='18' Content="-" Width="32"                          />
                                                <TextBlock Text="{Binding Quantity}" VerticalAlignment="Center" Margin="8,0"/>
                                                <Button x:ConnectionId='19' Content="+" Width="32"                          />
                                            </StackPanel>

                                            <TextBlock Grid.Column="4" Text="{Binding UnitPrice, Converter={StaticResource NumberFormatConverter}}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            <NumberBox Grid.Column="5" Value="{Binding DiscountPercent, Mode=TwoWay}" Minimum="0" Maximum="100" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="6" Text="{Binding LineTotal, Converter={StaticResource NumberFormatConverter}}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold"/>

                                            <Button x:ConnectionId='17' Grid.Column="7"                          HorizontalAlignment="Center">
                                                <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Shipping Info -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="送貨資訊" Style="{StaticResource SubtitleTextBlockStyle}"/>

                            <TextBox x:ConnectionId='10' x:Name="ShippingAddressText" Header="送貨地址" PlaceholderText="輸入送貨地址"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:ConnectionId='12' x:Name="ShippingCityText" Header="城市" Margin="0,0,8,0"/>
                                <TextBox x:ConnectionId='13' Grid.Column="1" x:Name="ShippingPostalCodeText" Header="郵遞區號" Margin="8,0,0,0"/>
                            </Grid>

                            <CalendarDatePicker x:ConnectionId='11' x:Name="ExpectedDeliveryDatePicker" Header="預計送達日期" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>

                    <!-- Notes -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="備註" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBox x:ConnectionId='9' x:Name="NotesText" AcceptsReturn="True" TextWrapping="Wrap" Height="100"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Order Summary -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="16,0,0,0" VerticalAlignment="Top">
                    <StackPanel Spacing="16">
                        <TextBlock Text="訂單摘要" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="小計"/>
                            <TextBlock x:ConnectionId='4' Grid.Column="1" x:Name="SubtotalText" Text="$0" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Text="稅額 (5%)"/>
                            <TextBlock x:ConnectionId='5' Grid.Row="1" Grid.Column="1" x:Name="TaxAmountText" Text="$0" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2" Text="運費"/>
                            <NumberBox x:ConnectionId='6' Grid.Row="2" Grid.Column="1" x:Name="ShippingCostBox" Value="0" Minimum="0" HorizontalAlignment="Right" Width="100"/>

                            <TextBlock Grid.Row="3" Text="折扣"/>
                            <NumberBox x:ConnectionId='7' Grid.Row="3" Grid.Column="1" x:Name="DiscountAmountBox" Value="0" Minimum="0" HorizontalAlignment="Right" Width="100"/>

                            <Border Grid.Row="5" Grid.ColumnSpan="2" Height="1" Background="{ThemeResource SystemControlForegroundBaseMediumBrush}" Margin="0,8"/>

                            <TextBlock Grid.Row="6" Text="總計" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock x:ConnectionId='8' Grid.Row="6" Grid.Column="1" x:Name="TotalAmountText" Text="$0" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                        </Grid>

                        <Button x:ConnectionId='3' Content="計算總計"                         HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid x:ConnectionId='2' x:Name="LoadingOverlay" Grid.RowSpan="3" Visibility="Collapsed" Background="#80000000">
            <ProgressRing IsActive="True" Width="60" Height="60"/>
        </Grid>
    </Grid>
</Page>

