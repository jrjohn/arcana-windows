<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Arcana.App.FloatingWindows.FloatingDocumentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arcana.App.FloatingWindows">

    <Grid x:Name="RootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid x:Name="TitleBar" Height="32" Background="{ThemeResource NavigationViewDefaultPaneBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icon and Title -->
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="12,0">
                <FontIcon x:Name="DocumentIcon" Glyph="&#xE7C3;" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock x:Name="DocumentTitle"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Dock Back Button -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,8,0">
                <Button x:Name="DockBackButton"
                        Click="DockBackButton_Click"
                        Padding="8,4"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE90C;" FontSize="12"/>
                        <TextBlock x:Name="DockBackText" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Document Content -->
        <Frame x:Name="ContentFrame" Grid.Row="1"/>
    </Grid>
</Window>
